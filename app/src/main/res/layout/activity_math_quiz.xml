<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".mathQuiz">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- ENCABEZADO: APODO + PROGRESO -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvApodoHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Alumno: -"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/tvProgreso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end"
                android:text="Pregunta 1 / 10"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- TÍTULO DEL JUEGO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MathQuiz - Desafío Rápido"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginTop="12dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloJuego"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Responde lo más rápido y preciso posible."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2" />

        <!-- CONTENIDO SCROLLABLE -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true"
            android:layout_marginTop="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="4dp">

                <!-- TÍTULO PREGUNTA -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvTituloPregunta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¿Cuánto es...?"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="24dp" />

                <!-- OPERACIÓN -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvOperacion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 + 0"
                    android:textSize="36sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="12dp" />

                <!-- RESPUESTAS -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="32dp">

                    <!-- Fila 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginBottom="12dp">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOpcion1"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="@color/mathquiz_button_bg"
                            app:rippleColor="#00FFFFFF"
                            app:cornerRadius="12dp" />

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOpcion2"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="@color/mathquiz_button_bg"
                            app:rippleColor="#00FFFFFF"
                            app:cornerRadius="12dp" />
                    </LinearLayout>

                    <!-- Fila 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOpcion3"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="@color/mathquiz_button_bg"
                            app:rippleColor="#00FFFFFF"
                            app:cornerRadius="12dp" />

                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnOpcion4"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:text="0"
                            android:textStyle="bold"
                            android:textColor="#FFFFFF"
                            android:fontFamily="sans-serif-medium"
                            app:backgroundTint="@color/mathquiz_button_bg"
                            app:rippleColor="#00FFFFFF"
                            app:cornerRadius="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- RESULTADO INSTANTÁNEO -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvResultadoInstantaneo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="24dp" />

                <!-- RESUMEN PARCIAL -->
                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvResumenParcial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Correctas: 0 | Incorrectas: 0"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

                <!-- BOTÓN SIGUIENTE -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSiguiente"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Siguiente"
                    android:textColor="#FFFFFF"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    android:enabled="false"
                    app:backgroundTint="#BDBDBD"
                    app:rippleColor="#00FFFFFF"
                    app:cornerRadius="12dp"
                    android:layout_marginTop="28dp"
                    android:layout_marginBottom="8dp" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
