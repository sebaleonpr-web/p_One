<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crudAdmin.crudEditRol"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloCrudEditRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar rol de usuario"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubTituloCrudEditRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona un usuario y asigna el menú que le corresponde en P-One."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="16dp" />

        <!-- SELECCIONAR USUARIO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSeleccionUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona usuario:"
            android:textStyle="bold"
            android:textColor="#000000" />

        <Spinner
            android:id="@+id/spinnerUsuario"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="6dp" />

        <!-- DATOS DEL USUARIO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvDatosUsuarioTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Datos del usuario seleccionado"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNombreUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombre: -"
            android:layout_marginTop="4dp"
            android:textColor="#000000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCorreoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Correo: -"
            android:layout_marginTop="2dp"
            android:textColor="#000000" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvRolActualUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rol actual: -"
            android:layout_marginTop="2dp"
            android:textColor="#000000" />

        <!-- NUEVO ROL -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNuevoRolTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nuevo rol (menú):"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvNuevoRolAyuda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selecciona el menú principal que verá este usuario al iniciar sesión."
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="2dp" />

        <Spinner
            android:id="@+id/spinnerNuevoRol"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:spinnerMode="dropdown"
            android:layout_marginTop="6dp" />

        <!-- BOTONES ORDENADOS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnVolverEditRol"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginEnd="10dp"
                android:text="Volver"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#FFA726"
                app:rippleColor="#CC7A00"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAplicarRol"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:text="Aplicar rol"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:onClick="aplicarRolUsuarioOnClick"
                app:backgroundTint="#FFA726"
                app:rippleColor="#CC7A00"
                app:cornerRadius="12dp" />
        </LinearLayout>

        <!-- VER LISTA ABAJO -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerListaPersonasRoles"
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginTop="14dp"
            android:text="Ver lista roles"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#29B6F6"
            app:rippleColor="#0277BD"
            app:cornerRadius="12dp" />

        <ProgressBar
            android:id="@+id/progressEditRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
