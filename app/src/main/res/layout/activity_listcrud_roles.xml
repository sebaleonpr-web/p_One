<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".AdminMenu.ListCrudAdmin.listcrudRoles">

    <LinearLayout
        android:id="@+id/main_container_list_roles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloListaRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de roles"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloListaRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantén presionado un rol para editar o eliminar."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="10dp" />

        <!-- HEADER DE TABLA -->
        <LinearLayout
            android:id="@+id/headerRoles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="6dp"
            android:background="#FFE9C8"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.6"
                android:text="Descripción"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="Nivel"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"
                android:gravity="center"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.3"
                android:text="Creado por"
                android:textStyle="bold"
                android:textSize="13sp"
                android:textColor="#333333"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <!-- LISTVIEW ROLES -->
        <ListView
            android:id="@+id/lvRoles"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#FFE0B2"
            android:dividerHeight="1dp"
            android:padding="6dp"
            android:background="#FFFDF7" />

        <!-- BOTÓN VOLVER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverDesdeListaRoles"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:onClick="volvercurd"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
