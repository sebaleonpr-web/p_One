<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".EditCrud.crudCursoEditar">

    <LinearLayout
        android:id="@+id/main_container_curso"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloCrudCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar curso"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloCrudCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifica los datos del curso seleccionado."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="16dp" />

        <!-- Nombre del curso -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_nombre_curso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Curso (ej: 1, 2, 3)"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Nivel / Letra -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="8dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_nivel_curso"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Letra (ej: A, B, C)"
                android:inputType="textCapCharacters" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Texto de ayuda -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAyudaCrudCurso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ejemplo: Curso 3 y letra B → 3°B."
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />

        <!-- Label profesor -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvLabelProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profesor asignado"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp" />

        <!-- Spinner profesor -->
        <Spinner
            android:id="@+id/spinner_profe"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginBottom="12dp" />

        <!-- Botones (Cancelar / Editar curso) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelarCurso"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginEnd="10dp"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                app:backgroundTint="#B0BEC5"
                app:rippleColor="#78909C"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarCurso"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#FFA726"
                app:cornerRadius="12dp"
                app:rippleColor="#CC7A00" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
