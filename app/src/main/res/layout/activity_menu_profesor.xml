<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".Main.menuProfesor">

    <LinearLayout
        android:id="@+id/main_container_menu_profe"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloMenuProfe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menú Profesor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloMenuProfe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Seleccione una opción para gestionar la información."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="18dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="22dp" />

        <!-- BOTÓN VER PUNTUACIONES -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdPuntuacion"
            android:text="Ver puntuaciones"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp" />

        <!-- BOTÓN VER LISTA ALUMNOS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerListaAlumnos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdalum"
            android:text="Ver lista alumnos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp" />

        <!-- BOTÓN VER LISTA CURSOS -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerListaCursos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdCurso"
            android:text="Ver lista cursos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp" />

        <!-- BOTÓN CERRAR SESIÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesionProfe"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="cerrarSesions"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#D84315"
            app:cornerRadius="12dp"
            app:rippleColor="#992300" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
