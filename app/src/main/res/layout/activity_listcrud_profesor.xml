<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas"
    tools:context=".AdminMenu.ListCrudAdmin.listcrudProfesor">

    <LinearLayout
        android:id="@+id/main_container_list_profesor"
        android:layout_width="379dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloListaProfesores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lista de profesores"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloListaProfesores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mantén presionado un profesor para editar o eliminar."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="10dp" />

        <!-- CABECERA TIPO TABLA (usa el item_profesores como contenido) -->
        <LinearLayout
            android:id="@+id/header_row_profesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="#1AFFA726">

            <include
                android:id="@+id/headerProfesores"
                layout="@layout/item_profesores"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <!-- DIVISOR CABECERA / LISTA -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="6dp" />

        <!-- LISTVIEW PROFESORES -->
        <ListView
            android:id="@+id/lvProfesores"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#FFE0B2"
            android:dividerHeight="1dp"
            android:padding="6dp"
            android:background="#FFFDF7" />

        <!-- BOTÓN VOLVER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolverDesdeListaProfesores"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:onClick="back"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
