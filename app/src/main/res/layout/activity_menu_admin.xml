<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main.menuAdmin"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloMenuAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Panel de administración"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubTituloMenuAdmin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gestiona roles, usuarios, cursos y permisos del sistema P-One."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="16dp" />

        <!-- BOTONES MENÚ ADMIN -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRol"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdRoles"
            android:text="Roles"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAlumno"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdAlumno"
            android:text="Alumnos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnProfesor"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdProfesor"
            android:text="Profesores"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAdmin"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdAdmin"
            android:text="Administradores"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCursos"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdCursos"
            android:text="Cursos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEditRol"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="curdEdit"
            android:text="Editar roles"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            app:rippleColor="#CC7A00" />

        <!-- BOTÓN CERRAR SESIÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="16dp"
            android:fontFamily="sans-serif-medium"
            android:onClick="cerrarSesion"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#D84315"
            app:cornerRadius="12dp"
            app:rippleColor="#992300" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
