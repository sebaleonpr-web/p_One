<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditCrud.crudProfesorEdit"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container_prof"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center_horizontal"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloCrudProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar profesor"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloCrudProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifica los datos del profesor seleccionado."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="16dp" />

        <!-- Nombre -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_nombre_prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Apellido -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="#000000">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_apellido_prof"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Apellido"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Cursos asignados (multi selección) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_curso_prof_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cursos asignados"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSeleccionarCursosProfEdit"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Seleccionar cursos"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            app:backgroundTint="#FFA726"
            app:rippleColor="#CC7A00"
            app:cornerRadius="12dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCursosSeleccionadosProf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sin cursos seleccionados"
            android:textColor="#000000"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />

        <!-- Correo -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:hintTextColor="#000000"/>

        <!-- Contraseña -->

        <!-- Texto de ayuda -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvAyudaCrudProfesor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aquí solo se actualizan los datos almacenados del profesor en P-One."
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="10dp" />

        <!-- BOTONES EDITAR / CANCELAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelarProfesor"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginEnd="10dp"
                android:fontFamily="sans-serif-medium"
                android:onClick="cancelarEdicion"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#B0BEC5"
                app:cornerRadius="12dp"
                app:rippleColor="#78909C" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarProfesor"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:onClick="editarProfesor"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#FFA726"
                app:cornerRadius="12dp"
                app:rippleColor="#CC7A00" />
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
