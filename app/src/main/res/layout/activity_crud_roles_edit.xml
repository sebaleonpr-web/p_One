<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="379dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloCrudRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Editar rol"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="6dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubtituloCrudRol"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modifica el nombre, descripción o permisos de este rol."
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="16dp" />

        <!-- NOMBRE -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtNombreRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre del rol"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- DESCRIPCIÓN -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:boxBackgroundMode="outline"
            app:boxBackgroundColor="#FFFFFF"
            app:boxStrokeColor="#000000"
            app:boxStrokeWidth="1dp"
            app:boxStrokeWidthFocused="2dp"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtDescripcionRol"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Descripción"
                android:minLines="2"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- CREADO POR -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCreadorLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Creado por:"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvCreadorNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargando..."
            android:textColor="#000000"
            android:textSize="14sp"
            android:layout_marginTop="4dp" />

        <!-- PERMISO (menú) -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvPermisoMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Permiso (menú):"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginTop="16dp" />

        <Spinner
            android:id="@+id/spinnerPermisoMenu"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="6dp"
            android:spinnerMode="dropdown" />

        <!-- BOTONES EDITAR / CANCELAR -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCancelarRol"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginEnd="10dp"
                android:text="Cancelar"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#B0BEC5"
                app:rippleColor="#78909C"
                app:cornerRadius="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEditarRol"
                android:layout_width="130dp"
                android:layout_height="53dp"
                android:layout_marginStart="10dp"
                android:text="Guardar Cambios"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                app:backgroundTint="#FFA726"
                app:cornerRadius="12dp"
                app:rippleColor="#CC7A00" />
        </LinearLayout>

        <!-- VER LISTA -->

        <ProgressBar
            android:id="@+id/progressRol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"
            android:layout_marginTop="10dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
