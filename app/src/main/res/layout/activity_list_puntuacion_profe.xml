<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".listPuntuacionProfe"
    android:background="@drawable/backgroundventanas">

    <LinearLayout
        android:id="@+id/main_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:background="#CCFFFFFF"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp">

        <!-- TÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvTituloPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Puntuaciones"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:gravity="center"
            android:layout_marginBottom="4dp" />

        <!-- SUBTÍTULO -->
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvSubPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resultados de los estudiantes"
            android:textSize="14sp"
            android:textColor="#555555"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- DIVISOR -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FFE0B2"
            android:layout_marginBottom="10dp" />

        <!-- LISTVIEW -->
        <ListView
            android:id="@+id/lvPuntuaciones"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="#FFE0B2"
            android:dividerHeight="1dp"
            android:padding="6dp"
            android:background="#FFFDF7" />

        <!-- BOTÓN VOLVER -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVolver"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Volver"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#FFA726"
            app:cornerRadius="12dp"
            android:layout_marginTop="12dp" />

        <!-- BOTÓN CERRAR SESIÓN -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCerrarSesion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Cerrar sesión"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            app:backgroundTint="#E65100"
            app:cornerRadius="12dp"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
